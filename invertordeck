    let currentLang = 'es';
    const langToggleBtn = document.getElementById('language-toggle');
    const navLinks = document.querySelectorAll('.nav-link');

    function updateContent() {
        const langData = content[currentLang];
        
        // Navigation
        navLinks.forEach((link, index) => {
            link.textContent = langData.nav[index];
        });

        // Header
        const headerTitle = document.querySelector('#header h1');
        if (headerTitle) headerTitle.textContent = langData.header.title;
        const headerSubtitle = document.querySelector('#header p');
        if (headerSubtitle) headerSubtitle.textContent = langData.header.subtitle;

        // Oportunidad section
        const oportunidadTitle = document.querySelector('#oportunidad .section-title');
        if (oportunidadTitle) oportunidadTitle.textContent = langData.oportunidad.title;
        const oportunidadSubtitle = document.querySelector('#oportunidad .section-subtitle');
        if (oportunidadSubtitle) oportunidadSubtitle.textContent = langData.oportunidad.subtitle;
        const problemTitle = document.querySelector('#oportunidad h3');
        if (problemTitle) problemTitle.textContent = langData.oportunidad.problemTitle;
        const subjetividadTitle = document.querySelector('#oportunidad .stat-card:nth-child(1) h4');
        if (subjetividadTitle) subjetividadTitle.textContent = langData.oportunidad.subjetividad.title;
        const subjetividadText = document.querySelector('#oportunidad .stat-card:nth-child(1) p');
        if (subjetividadText) subjetividadText.textContent = langData.oportunidad.subjetividad.text;
        const obsoletasTitle = document.querySelector('#oportunidad .stat-card:nth-child(2) h4');
        if (obsoletasTitle) obsoletasTitle.textContent = langData.oportunidad.obsoletas.title;
        const obsoletasText = document.querySelector('#oportunidad .stat-card:nth-child(2) p');
        if (obsoletasText) obsoletasText.textContent = langData.oportunidad.obsoletas.text;
        const continuidadTitle = document.querySelector('#oportunidad .stat-card:nth-child(3) h4');
        if (continuidadTitle) continuidadTitle.textContent = langData.oportunidad.continuidad.title;
        const continuidadText = document.querySelector('#oportunidad .stat-card:nth-child(3) p');
        if (continuidadText) continuidadText.textContent = langData.oportunidad.continuidad.text;
        const marketTitle = document.querySelector('#oportunidad .stat-card:nth-child(4) h3');
        if (marketTitle) marketTitle.textContent = langData.oportunidad.marketTitle;
        const marketText = document.querySelector('#oportunidad .stat-card:nth-child(4) p');
        if (marketText) marketText.textContent = langData.oportunidad.marketText;
        const marketProj = document.querySelector('#oportunidad .stat-card:last-child p:last-child');
        if (marketProj) marketProj.textContent = langData.oportunidad.marketProj;

        // Solucion section
        const solucionTitle = document.querySelector('#solucion .section-title');
        if (solucionTitle) solucionTitle.textContent = langData.solucion.title;
        const solucionSubtitle = document.querySelector('#solucion .section-subtitle');
        if (solucionSubtitle) solucionSubtitle.textContent = langData.solucion.subtitle;
        const evaluacionTitle = document.querySelector('#solucion .stat-card:nth-child(1) h3');
        if (evaluacionTitle) evaluacionTitle.textContent = langData.solucion.evaluacion.title;
        const evaluacionText = document.querySelector('#solucion .stat-card:nth-child(1) p');
        if (evaluacionText) evaluacionText.textContent = langData.solucion.evaluacion.text;
        const analisisTitle = document.querySelector('#solucion .stat-card:nth-child(2) h3');
        if (analisisTitle) analisisTitle.textContent = langData.solucion.analisis.title;
        const analisisText = document.querySelector('#solucion .stat-card:nth-child(2) p');
        if (analisisText) analisisText.textContent = langData.solucion.analisis.text;
        const visionTitle = document.querySelector('#solucion .stat-card:nth-child(3) h3');
        if (visionTitle) visionTitle.textContent = langData.solucion.vision.title;
        const visionText = document.querySelector('#solucion .stat-card:nth-child(3) p');
        if (visionText) visionText.textContent = langData.solucion.vision.text;

        // Modelo section
        const modeloTitle = document.querySelector('#modelo .section-title');
        if (modeloTitle) modeloTitle.textContent = langData.modelo.title;
        const modeloSubtitle = document.querySelector('#modelo .section-subtitle');
        if (modeloSubtitle) modeloSubtitle.textContent = langData.modelo.subtitle;
        const suscripcionTitle = document.querySelector('#modelo .stat-card:nth-child(1) h3');
        if (suscripcionTitle) suscripcionTitle.textContent = langData.modelo.suscripcion.title;
        const suscripcionText = document.querySelector('#modelo .stat-card:nth-child(1) p');
        if (suscripcionText) suscripcionText.textContent = langData.modelo.suscripcion.text;
        const ahorroTitle = document.querySelector('#modelo .stat-card:nth-child(2) h3');
        if (ahorroTitle) ahorroTitle.textContent = langData.modelo.ahorro.title;
        const ahorroText = document.querySelector('#modelo .stat-card:nth-child(2) p');
        if (ahorroText) ahorroText.innerHTML = langData.modelo.ahorro.text;
        const calculadoraTitle = document.querySelector('#modelo .stat-card:nth-child(3) h3');
        if (calculadoraTitle) calculadoraTitle.textContent = langData.modelo.calculadoraTitle;
        const calculadoraText = document.querySelector('#modelo .stat-card:nth-child(3) .text-gray-600');
        if (calculadoraText) calculadoraText.textContent = langData.modelo.calculadoraText;
        const labelTherapists = document.querySelector('#modelo .stat-card:nth-child(3) label');
        if (labelTherapists) labelTherapists.textContent = langData.modelo.labelTherapists;
        const labelSavings = document.querySelector('#modelo .stat-card:nth-child(3) p:nth-child(3)');
        if (labelSavings) labelSavings.textContent = langData.modelo.labelSavings;
        const labelROI = document.querySelector('#modelo .stat-card:nth-child(3) p:last-child');
        if (labelROI) labelROI.textContent = langData.modelo.labelROI;

        // Traccion section
        const traccionTitle = document.querySelector('#traccion .section-title');
        if (traccionTitle) traccionTitle.textContent = langData.traccion.title;
        const traccionSubtitle = document.querySelector('#traccion .section-subtitle');
        if (traccionSubtitle) traccionSubtitle.textContent = langData.traccion.subtitle;
        const espaniaTitle = document.querySelector('#traccion .stat-card:nth-child(1) h3');
        if (espaniaTitle) espaniaTitle.textContent = langData.traccion.espaniaTitle;
        const espaniaList = document.querySelector('#traccion .stat-card:nth-child(1) ul');
        if (espaniaList) {
            espaniaList.innerHTML = '';
            langData.traccion.espaniaList.forEach(item => {
                const li = document.createElement('li');
                li.innerHTML = item;
                espaniaList.appendChild(li);
            });
        }
        const usaTitle = document.querySelector('#traccion .stat-card:nth-child(2) h3');
        if (usaTitle) usaTitle.textContent = langData.traccion.usaTitle;
        const usaText = document.querySelector('#traccion .stat-card:nth-child(2) p:first-of-type');
        if (usaText) usaText.innerHTML = langData.traccion.usaText;
        const usaPropiedad = document.querySelector('#traccion .stat-card:nth-child(2) .text-sm:nth-child(2)');
        if (usaPropiedad) usaPropiedad.textContent = langData.traccion.usaPropiedad;
        const usaSocio = document.querySelector('#traccion .stat-card:nth-child(2) .text-sm:last-child');
        if (usaSocio) usaSocio.textContent = langData.traccion.usaSocio;

        // Proyecciones section
        const proyeccionesTitle = document.querySelector('#proyecciones .section-title');
        if (proyeccionesTitle) proyeccionesTitle.textContent = langData.proyecciones.title;
        const proyeccionesSubtitle = document.querySelector('#proyecciones .section-subtitle');
        if (proyeccionesSubtitle) proyeccionesSubtitle.textContent = langData.proyecciones.subtitle;
        const labelPenetration = document.querySelector('#proyecciones label');
        if (labelPenetration) labelPenetration.textContent = langData.proyecciones.labelPenetration;

        // Crecimiento section
        const crecimientoTitle = document.querySelector('#plan-crecimiento .section-title');
        if (crecimientoTitle) crecimientoTitle.textContent = langData.crecimiento.title;
        const crecimientoSubtitle = document.querySelector('#plan-crecimiento .section-subtitle');
        if (crecimientoSubtitle) crecimientoSubtitle.textContent = langData.crecimiento.subtitle;
        const clientsRowHeader = document.querySelector('#financialsTableBody tr:first-child td:first-child');
        if (clientsRowHeader) clientsRowHeader.textContent = langData.crecimiento.tableRowClients;
        const revenueRowHeader = document.querySelector('#financialsTableBody tr:last-child td:first-child');
        if (revenueRowHeader) revenueRowHeader.textContent = langData.crecimiento.tableRowRevenue;
        
        // Equipo section
        const equipoTitle = document.querySelector('#equipo .section-title');
        if (equipoTitle) equipoTitle.textContent = langData.equipo.title;
        const equipoSubtitle = document.querySelector('#equipo .section-subtitle');
        if (equipoSubtitle) equipoSubtitle.textContent = langData.equipo.subtitle;
        const ejecutivoTitle = document.querySelector('#equipo .stat-card:nth-child(1) h3');
        if (ejecutivoTitle) ejecutivoTitle.textContent = langData.equipo.ejecutivo.title;
        const ejecutivoText = document.querySelector('#equipo .stat-card:nth-child(1) p');
        if (ejecutivoText) ejecutivoText.textContent = langData.equipo.ejecutivo.text;
        const noEjecutivoTitle = document.querySelector('#equipo .stat-card:nth-child(2) h3');
        if (noEjecutivoTitle) noEjecutivoTitle.textContent = langData.equipo.noEjecutivo.title;
        const noEjecutivoText = document.querySelector('#equipo .stat-card:nth-child(2) p');
        if (noEjecutivoText) noEjecutivoText.textContent = langData.equipo.noEjecutivo.text;
        const sociosTitle = document.querySelector('#equipo .stat-card:nth-child(3) h3');
        if (sociosTitle) sociosTitle.textContent = langData.equipo.socios.title;
        const sociosText = document.querySelector('#equipo .stat-card:nth-child(3) p');
        if (sociosText) sociosText.textContent = langData.equipo.socios.text;
        const capitalTitle = document.querySelector('#equipo .mt-16 h3');
        if (capitalTitle) capitalTitle.textContent = langData.equipo.capitalTitle;
        const capitalSubtitle = document.querySelector('#equipo .mt-16 p');
        if (capitalSubtitle) capitalSubtitle.textContent = langData.equipo.capitalSubtitle;

        // Footer
        const footerTitle = document.querySelector('footer h2');
        if (footerTitle) footerTitle.textContent = langData.footer.title;
        const footerText = document.querySelector('footer p');
        if (footerText) footerText.textContent = langData.footer.text;
        const footerButton = document.querySelector('footer a');
        if (footerButton) footerButton.textContent = langData.footer.button;

        // Update Charts
        if(growthChart) {
            growthChart.data.datasets[0].label = langData.crecimiento.chartLabelRevenue;
            growthChart.data.datasets[1].label = langData.crecimiento.chartLabelClients;
            growthChart.options.scales.y.title.text = langData.crecimiento.chartTitle;
            growthChart.update();
        }

        if(marketChart) {
            marketChart.data.labels = langData.oportunidad.marketChartLabels;
            marketChart.data.datasets[0].label = 'N¬∫ de Profesionales';
            marketChart.update();
        }

        if(capitalUseChart) {
            capitalUseChart.data.labels = langData.equipo.capitalLabels;
            capitalUseChart.update();
        }
    }

    langToggleBtn.addEventListener('click', () => {
        if (currentLang === 'es') {
            currentLang = 'en';
            langToggleBtn.textContent = 'ES';
            document.documentElement.lang = 'en';
        } else {
            currentLang = 'es';
            langToggleBtn.textContent = 'EN';
            document.documentElement.lang = 'es';
        }
        updateContent();
    });


    const marketData = {
        labels: content.es.oportunidad.marketChartLabels,
        datasets: [{
            label: 'N¬∫ de Profesionales en EE.UU.',
            data: [60000, 196000, 351000],
            backgroundColor: [
                'rgba(167, 139, 250, 0.6)',
                'rgba(139, 92, 246, 0.6)',
                'rgba(109, 40, 217, 0.6)'
            ],
            borderColor: [
                'rgba(167, 139, 250, 1)',
                'rgba(139, 92, 246, 1)',
                'rgba(109, 40, 217, 1)'
            ],
            borderWidth: 1
        }]
    };
    const marketChartCtx = document.getElementById('marketChart').getContext('2d');
    const marketChart = new Chart(marketChartCtx, {
        type: 'bar',
        data: marketData,
        options: {
            responsive: true,
            maintainAspectRatio: false,
            indexAxis: 'y',
            plugins: {
                legend: {
                    display: false
                }
            },
            scales: {
                x: {
                    beginAtZero: true,
                    ticks: {
                       callback: function(value) {
                           return value / 1000 + 'k';
                       }
                    }
                }
            }
        }
    });

    const capitalUseData = {
        labels: content.es.equipo.capitalLabels,
        datasets: [{
            data: [40, 30, 20, 10],
            backgroundColor: [
                'rgba(139, 92, 246, 0.8)',
                'rgba(167, 139, 250, 0.8)',
                'rgba(196, 181, 253, 0.8)',
                'rgba(221, 214, 254, 0.8)'
            ],
            hoverOffset: 4
        }]
    };
    const capitalUseCtx = document.getElementById('capitalUseChart').getContext('2d');
    const capitalUseChart = new Chart(capitalUseCtx, {
        type: 'doughnut',
        data: capitalUseData,
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom',
                }
            }
        }
    });

    const therapistsInput = document.getElementById('therapists');
    const roiResult = document.getElementById('roiResult');
    const monthlySavingPerTherapist = 2850;
    
    function updateROI() {
        const numTherapists = parseInt(therapistsInput.value) || 0;
        const totalSavings = numTherapists * monthlySavingPerTherapist;
        if (roiResult) roiResult.textContent = `$${totalSavings.toLocaleString()}`;
    }
    therapistsInput.addEventListener('input', updateROI);
    updateROI();

    const penetrationSlider = document.getElementById('penetration');
    const penetrationValue = document.getElementById('penetrationValue');
    const financialsChartCtx = document.getElementById('financialsChart').getContext('2d');
    let financialsChart;
    const totalTherapistsTarget = 120000 / 0.15;
    const avgFee = 80;

    function updateFinancials() {
        const penetration = parseInt(penetrationSlider.value);
        if (penetrationValue) penetrationValue.textContent = penetration;
        
        const therapistsCount = totalTherapistsTarget * (penetration / 100);
        const monthlyRevenue = therapistsCount * avgFee;
        const annualRevenue = monthlyRevenue * 12;

        const data = {
            labels: ['Ingresos Mensuales', 'Ingresos Anuales'],
            datasets: [{
                label: 'Ingresos en USD',
                data: [monthlyRevenue, annualRevenue],
                backgroundColor: ['rgba(139, 92, 246, 0.6)', 'rgba(109, 40, 217, 0.6)'],
                borderColor: ['rgba(139, 92, 246, 1)', 'rgba(109, 40, 217, 1)'],
                borderWidth: 1
            }]
        };

        if (financialsChart) {
            financialsChart.data = data;
            financialsChart.update();
        } else {
            financialsChart = new Chart(financialsChartCtx, {
                type: 'bar',
                data: data,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.y !== null) {
                                        label += new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(context.parsed.y);
                                    }
                                    return label;
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    if (value >= 1000000) return `$${value / 1000000}M`;
                                    if (value >= 1000) return `$${value / 1000}k`;
                                    return `$${value}`;
                                }
                            }
                        }
                    }
                }
            });
        }
    }
    if (penetrationSlider) penetrationSlider.addEventListener('input', updateFinancials);
    updateFinancials();

    const yearlyData = [
        { year: 1, clients: 160, revenue: 153600 },
        { year: 2, clients: 494, revenue: 474240 },
        { year: 3, clients: 1215, revenue: 1166400 },
        { year: 4, clients: 2269, revenue: 2178240 },
        { year: 5, clients: 3778, revenue: 3626880 }
    ];

    const tableBody = document.getElementById('financialsTableBody');
    
    function updateTableContent() {
        if (!tableBody) return;
        tableBody.innerHTML = '';
        
        const clientsRow = document.createElement('tr');
        clientsRow.innerHTML = `<td class="p-4 font-semibold">${content[currentLang].crecimiento.tableRowClients}</td>`;
        yearlyData.forEach(data => {
            clientsRow.innerHTML += `<td class="p-4 text-center">${data.clients.toLocaleString()}</td>`;
        });
        tableBody.appendChild(clientsRow);

        const revenueRow = document.createElement('tr');
        revenueRow.innerHTML = `<td class="p-4 font-semibold">${content[currentLang].crecimiento.tableRowRevenue}</td>`;
        yearlyData.forEach(data => {
            revenueRow.innerHTML += `<td class="p-4 text-center">$${data.revenue.toLocaleString()}</td>`;
        });
        tableBody.appendChild(revenueRow);
    }

    let growthChart;
    const growthChartCtx = document.getElementById('growthChart').getContext('2d');
    
    function createGrowthChart() {
        if (growthChart) growthChart.destroy();
        growthChart = new Chart(growthChartCtx, {
            type: 'line',
            data: {
                labels: yearlyData.map(d => `A√±o ${d.year}`),
                datasets: [
                    {
                        label: content[currentLang].crecimiento.chartLabelRevenue,
                        data: yearlyData.map(d => d.revenue),
                        borderColor: 'rgba(109, 40, 217, 1)',
                        backgroundColor: 'rgba(109, 40, 217, 0.2)',
                        fill: true,
                        tension: 0.4
                    },
                    {
                        label: content[currentLang].crecimiento.chartLabelClients,
                        data: yearlyData.map(d => d.clients),
                        borderColor: 'rgba(139, 92, 246, 1)',
                        backgroundColor: 'rgba(139, 92, 246, 0.2)',
                        fill: true,
                        tension: 0.4
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                         callbacks: {
                             label: function(context) {
                                 if (context.datasetIndex === 0) {
                                     return `${content[currentLang].crecimiento.chartLabelRevenue}: $${context.parsed.y.toLocaleString()}`;
                                 } else {
                                     return `${content[currentLang].crecimiento.chartLabelClients}: ${context.parsed.y.toLocaleString()}`;
                                 }
                             }
                         }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: content[currentLang].crecimiento.chartTitle
                        },
                         ticks: {
                            callback: function(value) {
                                 if (value >= 1000000) return `$${value / 1000000}M`;
                                 if (value >= 1000) return `$${value / 1000}k`;
                                 return value;
                            }
                        }
                    }
                }
            }
        });
    }
    
    const sections = document.querySelectorAll('section');
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                navLinks.forEach(link => {
                    link.classList.toggle('active', link.getAttribute('href').substring(1) === entry.target.id);
                });
            }
        });
    }, { threshold: 0.5 });
    sections.forEach(section => observer.observe(section));
    
    updateTableContent();
    createGrowthChart();
    updateContent();

});
</script>
</body>
</html>
